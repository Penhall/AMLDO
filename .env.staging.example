# =============================================================================
# AMLDO - Configuração de STAGING
# =============================================================================
# Este arquivo contém configurações para o ambiente de homologação/staging
# Copie para .env.staging e ajuste os valores
# =============================================================================

# =============================================================================
# API Keys
# =============================================================================
GOOGLE_API_KEY=sua_chave_de_staging_aqui

# =============================================================================
# Ambiente
# =============================================================================
ENVIRONMENT=staging
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=AMLDO API (Staging)
API_VERSION=0.3.0
API_CORS_ORIGINS=https://staging.amldo.example.com

# =============================================================================
# Modelos
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
LLM_MODEL=gemini-2.5-flash
LLM_PROVIDER=google_genai
LLM_TEMPERATURE=0.0

# =============================================================================
# RAG
# =============================================================================
SEARCH_K=12
SEARCH_TYPE=mmr
RAG_V3_ENABLED=true
RAG_V3_SEARCH_TYPE=similarity
RAG_V3_K=12

# =============================================================================
# Paths
# =============================================================================
VECTOR_DB_PATH=/data/vector_db/v1_faiss_vector_db
ARTIGOS_0_CSV_PATH=/data/processed/v1_artigos_0.csv
PROCESSED_ARTICLES_CSV_PATH=/data/processed/v1_processed_articles.csv
METRICS_DB_PATH=/data/metrics/metrics.db

# =============================================================================
# Docker
# =============================================================================
STREAMLIT_PORT=8501
ADK_PORT=8080

# =============================================================================
# Métricas
# =============================================================================
METRICS_ENABLED=true
