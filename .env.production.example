# =============================================================================
# AMLDO - Configuração de PRODUCTION
# =============================================================================
# Este arquivo contém configurações para o ambiente de PRODUÇÃO
# Copie para .env.production e ajuste os valores
# ATENÇÃO: Use valores de produção reais!
# =============================================================================

# =============================================================================
# API Keys
# =============================================================================
GOOGLE_API_KEY=sua_chave_de_producao_aqui

# =============================================================================
# Ambiente
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=WARNING  # Menos verboso em produção
DEBUG=false

# =============================================================================
# API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=AMLDO API
API_VERSION=0.3.0
API_CORS_ORIGINS=https://amldo.example.com,https://www.amldo.example.com

# =============================================================================
# Modelos
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
LLM_MODEL=gemini-2.5-flash
LLM_PROVIDER=google_genai
LLM_TEMPERATURE=0.0

# =============================================================================
# RAG
# =============================================================================
SEARCH_K=12
SEARCH_TYPE=mmr
RAG_V3_ENABLED=true
RAG_V3_SEARCH_TYPE=similarity
RAG_V3_K=12

# =============================================================================
# Paths (produção usa caminhos absolutos em containers)
# =============================================================================
VECTOR_DB_PATH=/data/vector_db/v1_faiss_vector_db
ARTIGOS_0_CSV_PATH=/data/processed/v1_artigos_0.csv
PROCESSED_ARTICLES_CSV_PATH=/data/processed/v1_processed_articles.csv
METRICS_DB_PATH=/data/metrics/metrics.db

# =============================================================================
# Docker
# =============================================================================
STREAMLIT_PORT=8501
ADK_PORT=8080

# =============================================================================
# Métricas
# =============================================================================
METRICS_ENABLED=true

